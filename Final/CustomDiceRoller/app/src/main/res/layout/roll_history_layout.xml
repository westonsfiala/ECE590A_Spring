<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="@string/temp"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/rollResultText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textColor="@android:color/primary_text_dark"
            android:textAlignment="center" android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center"
            android:background="@android:color/background_dark"/>
    <TextView
            android:text="@string/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rollTimeStampText" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" android:textAlignment="viewEnd"/>
    <TextView
            android:text="@string/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rollDetailsText" android:textAlignment="textStart"
            android:textColor="@android:color/primary_text_dark"
            app:layout_constraintStart_toEndOf="@+id/rollResultText"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rollTitleText" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/divider2"/>
    <TextView
            android:text="@string/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rollTitleText"
            android:textColor="@android:color/primary_text_dark" android:textAlignment="textStart"
            app:layout_constraintStart_toEndOf="@+id/rollResultText" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rollResultText" android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>