<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Configure Your Timer!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GreetingText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toTopOf="@+id/TimerDurationText" android:layout_marginBottom="8dp"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="50"
            android:progress="10"
            android:id="@+id/TimerDurationSlider"
            app:layout_constraintTop_toBottomOf="@+id/TimerDurationText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toTopOf="@+id/StartColorText" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Timer Duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TimerDurationText"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/GreetingText"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/TimerDurationSlider"/>
    <TextView
            android:text="Starting LED Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/StartColorText"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@+id/TimerDurationSlider" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toTopOf="@+id/StartingColorFragment"/>
    <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:name="com.example.bluetoothtimer.ColorSelectorFragment"
            android:id="@+id/StartingColorFragment"
            app:layout_constraintTop_toBottomOf="@+id/StartColorText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/EndingColorText"/>
    <TextView
            android:text="Ending LED Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EndingColorText"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@+id/StartingColorFragment" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toTopOf="@+id/EndingColorFragment"/>
    <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:name="com.example.bluetoothtimer.ColorSelectorFragment"
            android:id="@+id/EndingColorFragment"
            app:layout_constraintTop_toBottomOf="@+id/EndingColorText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/BuzzSwitch"/>
    <Switch
            android:text="Buzz On Timer End"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BuzzSwitch"
            app:layout_constraintTop_toBottomOf="@+id/EndingColorFragment" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ReadbackText"/>
    <TextView
            android:text="Temp on Arduino = Unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ReadbackText"
            app:layout_constraintTop_toBottomOf="@+id/BuzzSwitch" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/RunTimerButton"
            android:textAlignment="center"/>
    <Button
            android:text="Run Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RunTimerButton" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ReadbackText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/UpdateConfigButton"/>
    <Button
            android:text="Update Config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UpdateConfigButton" app:layout_constraintEnd_toStartOf="@+id/RunTimerButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/RunTimerButton"
            app:layout_constraintBottom_toBottomOf="@+id/RunTimerButton"/>
</android.support.constraint.ConstraintLayout>